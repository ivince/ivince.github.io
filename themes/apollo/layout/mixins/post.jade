mixin postInfo(item)
    .post-info
        != full_date(item.date, 'll')
        if item.from && (is_home() || is_post())
            a.post-from(href=item.from target="_blank" title=item.from) 翻译 · 原文地址

//- Index Page
mixin posts()
    ul.home.post-list
        - page.posts.each(function (item) {
            li.post-list-item
                article.post-block
                    h2.post-title
                        a.post-title-link(href= url_for(item.path))
                            != item.title
                    +postInfo(item)
                    .post-content
                        != item.excerpt
                    a.read-more(href= url_for(item.path))!= __('more')
        - })

//- Archive Page
mixin postList()
    .archive
        - var year = 0;
        - var change = false;
        - page.posts.each(function (item) {
            - var itemYear = date(item.date, 'YYYY') - 0;
            - change = year !== itemYear;
            - year = change ? itemYear : year;
            if change
                h2.archive-year!= year
            .post-item
                +postInfo(item)
                a.post-title-link(href= url_for(item.path))
                    != item.title
        - })

//- Gallery
mixin gallery()
    link(rel="stylesheet", href=url_for("css/style.css"))

    for item in site.data.ins.items
        h4= full_date(item.time, 'MMM, YYYY')
        div.row
            for image in item.images
                div.col-1-3
                    img.ins_img(src='../img/placeholder.png', title=image.title, data-src='../ins/thumbnail/#{image.image.name+image.image.type}', data-name=image.image.name, data-w_h=image.image.w_h, data-location=image.location, data-type=image.image.type)

    div.motto
        span.quot “
        span 如果命运是一条孤独的河流，谁会是你灵魂的摆渡人？
        span.quot ”

    div.ins_modal
        div.ins-tab
            div.modal-tab
                div.modal-box
                    div.tab.image-margin
                        div.tab-cell
                            div.text-right.text-overflow
                                span.shot-12px
                                span.at-12px @
                                span.location
                    div.line-1px
                    img.modal_img
                    div.line-1px
                    div.tab.image-margin
                        .tab-cell
                            div.text-overflow.text-left
                                div.like-12px
                                div.img_title

    script(src="../js/jquery-1.9.1.min.js")
    script(src="../js/jquery.unveil.js")
    script(src="../js/instagram.js")

//- Post Page
mixin post(item)
    .post
        if item.title != '相册'
            article.post-block
                h1.post-title
                    != item.title
                +postInfo(item)
                .post-content
                    != item.content
        else
            +gallery()
